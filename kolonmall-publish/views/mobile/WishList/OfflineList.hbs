{{#> mobile/layouts/default }}
    {{#*inline "header"}}
        {{>mobile/partials/navigation-with-back title="관심상품"}}
    {{/inline}}
    {{#*inline "content"}}
        <h2 class="hidden">KOLONmall 본문영역</h2>
        <section id="kolon-content">
            <!-- navigation -->
            <div class="scr-navi">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <a href="/MyPage">홈</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/Order/List">주문조회</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/RMA/List">취소/반품/교환</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/WishList/OnlineList" class="on">관심상품</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/Review/RegisteredList">리뷰</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/Point">포인트</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/Coupon">쿠폰</a>
                    </div>
                    <div class="swiper-slide">
                        <a href="/Deposit">예치금</a>
                    </div>
                </div>
                <i class="icn-navi"></i>
            </div>
            <div class="line"></div>
            <!-- //navigation -->
            
            <div class="cs-depth3 col2">
                <ul>
                    <li><a href="/WishList/OnlineList">온라인 관심상품</a></li>
                    <li class="on"><a href="/WishList/OfflineList">오프라인 관심상품</a></li>
                </ul>
            </div>
            <form id="wishlistForm">
                <input type="hidden" name="{{CSRFName}}" value="{{CSRFToken}}" />
                <article class="cart">
                    {{#if wishList.results}}
                        <div class="top">
                            <div class="ch-area">
                                <div class="check">
                                    <input type="checkbox" id="selectAllCheckbox" />
                                    <label for="selectAllCheckbox"></label>
                                </div>
                                <label for="selectAllCheckbox">전체선택</label>
                            </div>
                        </div>
                        <div class="cont">
                            <!-- 장바구니 상품 -->
                            <ul class="c-list">
                                {{#wishList.results}}
                                    {{>mobile/precompiles/wishList/wishlist-item}}
                                {{/wishList.results}}
                            </ul>
                            <div class="btns">
                                <a href="#" class="click-del" id="deleteSelectedItemsBtn">선택상품 삭제</a>
                                <a href="#" class="click-cart" id="addToCartSelectedItemsBtn">선택상품 장바구니로</a>
                            </div>
                            <!-- //장바구니 상품 -->
                        </div>
                    {{else}}
                        <!--  내역이 없을때 -->
                        <div class="cont">
                            <h2 class="empty">오프라인 관심상품이 없습니다.</h2>
                        </div>
                    {{/if}}
                </article>
            </form>
        </section>
    {{/inline}}
{{/mobile/layouts/default}}
