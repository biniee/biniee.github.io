<li>
    <div class="top">
        <div class="ch-area">
            <div class="check">
                <input type="checkbox" id="checkbox_{{#is productSaleType "SET"}}{{product.code}}{{else}}{{product.baseProductCode }}{{/is}}" name="chk" class="wishlist-item-checkbox"
                       value="{{productCode}}" />
                <label for="checkbox_{{#is productSaleType "SET"}}{{product.code}}{{else}}{{product.baseProductCode }}{{/is}}"></label>
            </div>
            <label for="prod1"></label>
        </div>
        <a href="#" class="btn-del delete-item-btn">상품삭제</a>
    </div>
    <div class="prod">
        <img src="{{product.representationImage}}" alt="{{product.name}}" />
    </div>
    <div class="info">
        <p class="t1">
            <span class="brand">{{product.supplierName}}</span>
            <span>{{#is productSaleType "SET"}}{{product.code}}{{else}}{{product.baseProductCode }}{{/is}}</span>
        </p>
        <p class="t2">{{product.name}}</p>
        <p class="option">{{product.color}}, {{product.size}}</p>
        <p class="btm">
            {{#gt product.price.discountRate 0}}<span class="discount">{{product.price.formattedWishPrice}}원</span>{{/gt}}
            <span class="price">{{product.price.formattedPrice}} 원</span>
        </p>
    </div>
    <div class="btn-area">
        <a href="#" class="btn add-to-cart-btn">장바구니 {{product.components}}</a>
    </div>
</li>