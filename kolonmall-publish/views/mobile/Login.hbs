{{#> mobile/layouts/popup }}

    {{#*inline "content"}}
        <header class="kolon-header">
            <div class="h-wrap">
                <h2 class="hidden">KOLONmall 메인메뉴</h2>
                <ul class="top-navi">
                    <li>
                        <h1 class="sub"><a href="#">로그인</a></h1>
                    </li>
                    <li>
                        <a href="javascript:history.back();" class="close">닫기</a>
                    </li>
                </ul>
            </div>
        </header>

        <h2 class="hidden">KOLONmall 본문영역</h2>
        <section id="kolon-content" class="wrap-form-login">
            <input type="hidden" id="errorMessage" value="{{errorMessage}}" />
            <form class="form-login" id="loginForm" action="./j_spring_security_check" method="post">
                <input type="hidden" name="returnUrl" value="{{returnUrl}}">
                <div class="btn-ctc">
                    <input type="hidden" name="type" id="type" value="01" />
                    <a href="#none" class="contact-phone" id="checkPhone">휴대폰번호로 로그인</a>
                </div>
                <div class="in-txt id">
                    <input type="text" placeholder="아이디 또는 이메일 주소" id="user_id" name="j_username" value="{{userName}}"/>
                    <span>아이디/이메일</span>
                </div>
                <div class="in-txt pass">
                    <input type="password" placeholder="비밀번호" id="password" name="j_password"/>
                    <span>비밀번호</span>
                </div>

                <!-- 휴대폰 번호 로그인 -->
