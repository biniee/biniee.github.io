<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>sitemap</title>
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        body {
            padding-bottom: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>{{title}}</h1>

    {{#each sitemap}}
        <h2>{{ @key }}</h2>

        <table class="table table-striped table-bordered table-condensed">
            {{#each this}}
                <tr>
                    <td>
                        <div class="pull-right">
                            {{#if duedate}}
                                <div class="text-right">
                                    <small><i class="fa fa-clock-o" aria-hidden="true"></i> {{time_to_s duedate}}</small>
                                </div>
                            {{/if}}

                            <div>
                                {{#if ../../mobileViewMode}}
                                <div class="hidden-xs">
                                    {{{output_link 'plan' id true}}}
                                    {{{output_link 'image_kolon' id true}}}
                                    {{{output_link 'image_seedpost' id true}}}
                                </div>
                                <div class="visible-xs">
                                    {{{output_link 'plan' id true}}}
                                    <br />
                                    {{{output_link 'image_kolon' id true}}}
                                    <br />
                                    {{{output_link 'image_seedpost' id true}}}
                                </div>
                                {{else}}
                                <div class="hidden-xs">
                                    {{{output_link 'plan' id false}}}
                                    {{{output_link 'image_kolon' id false}}}
                                    {{{output_link 'image_seedpost' id false}}}
                                </div>
                                <div class="visible-xs">
                                    {{{output_link 'plan' id false}}}
                                    <br />
                                    {{{output_link 'image_kolon' id false}}}
                                    <br />
                                    {{{output_link 'image_seedpost' id false}}}
                                </div>
                                {{/if}}
                            </div>
                        </div>

                        <div><small>{{ id }}</small></div>
                        {{{publish_link id name ../../mobileViewMode}}}
                    </td>
                </tr>
            {{/each}}
        </table>
    {{/each}}
    {{#if mobileViewMode}}
        {{#if mobile}}
            <a class="btn btn-block btn-default" onClick="changeViewMode('desktop', true)">데스크탑보기</a>
        {{else}}
            <a class="btn btn-block btn-default" onClick="changeViewMode('desktop', false)">데스크탑보기</a>
        {{/if}}
    {{else}}
        {{#if mobile}}
        <a class="btn btn-block btn-default" onClick="changeViewMode('mobile', false)">모바일보기</a>
        {{else}}
        <a class="btn btn-block btn-default" onClick="changeViewMode('mobile', true)">모바일보기</a>
        {{/if}}
    {{/if}}
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.4/js.cookie.min.js"></script>
<script>
    function changeViewMode(mode, isCreateCookie) {
        if (isCreateCookie) {
            if (mode == 'mobile') {
                Cookies.set('BROWSER_MOBILE_VIEW_MODE', 1);
            } else {
                Cookies.set('BROWSER_MOBILE_VIEW_MODE', 0);
            }
        } else {
            Cookies.remove('BROWSER_MOBILE_VIEW_MODE');
        }

        location.reload();
    }
</script>
</body>
</html>
