<div class="listWrapper"
     data-product-code="{{product.code}}"
     data-product-base-code="{{product.baseProductCode}}"
     data-product-size="{{product.size}}"
     data-entry-code="{{entryCode}}"
     data-consignment-entry-code="{{consignmentEntryCode}}"
     data-origin-delivery-code="{{originDeliveryCode}}"
    {{#if selectedOrderEntryCode}}{{#is selectedOrderEntryCode entryCode}}style="opacity: 1;"{{/is}}{{/if}}>
    <div class="list">
        <p class="select-order">
            <span class="checkbox">
                <input type="checkbox" class="orderItemCheckbox" {{#if selectedOrderEntryCode}}{{#is selectedOrderEntryCode entryCode}}checked="checked"{{/is}}{{/if}} id="checkbox_{{entryCode}}">
                <i></i>
            </span>
        </p>
        <p class="thumb"><img src="{{product.representationImage}}" alt="{{product.name}}"></p>
        <div class="product">
            <h4>
                {{product.supplierName}}
                <small>{{#is product.productSaleType "SET"}}{{product.code}}{{else}}{{product.baseProductCode }}{{/is}}</small>
            </h4>
            <p>{{product.name}}</p>
            <ul class="meta">
                <li>
                    <em>수량</em>
                    <span>{{quantity}}</span>
                </li>
                <li>
                    <em>옵션</em>
                    <span>{{product.color}}, {{product.size}}</span>
                </li>
            </ul>
            {{#is product.productSaleType "SET"}}
                <div class="options"><a href="#" class="btn-option">세트옵션보기</a></div>
            {{/is}}
        </div>
        <div class="range">
            <div class="spinner">
                <input type="text" value="{{quantity}}" data-original-quantity="{{quantity}}" class="orderItemQuantity" readonly>
                <button type="button quantityPlus" class="plus" {{#isnt selectedOrderEntryCode entryCode}}disabled="disabled"{{/isnt}}>수량 증가</button>
                <button type="button quantityMinus" class="minus" {{#isnt selectedOrderEntryCode entryCode}}disabled="disabled"{{/isnt}}>수량 감소</button>
            </div>
        </div>
        <p class="price">{{formattedPrice}}원</p>
        <p class="state">
            <span>{{displayedDeliveryType}}</span>
        </p>
    </div>
