    {{#*inline "content"}}
        <h2 class="hidden">KOLONmall 본문영역</h2>
        <section id="kolon-content">

            <!-- navigation -->
            <nav class="wrap-navi">
                <h3><a href="/Brand/{{category.id}}">{{category.name}}<span>{{category.totalNumber}}</span></a></h3>
                {{#if category.subcategories}}
                    <dl class="sub-menu">
                        {{#category.subcategories}}
                            {{#if ../selectedCategory}}
                                {{#is ../selectedCategory.id id}}
                                    <dt><a href="{{url}}">{{name}}</a></dt>
                                {{else}}
                                    <dd><a href="{{url}}">{{name}}</a></dd>
                                {{/is}}
                            {{/if}}
                        {{/category.subcategories}}
                        <!--<dd class="bot"><a href="#">시리즈 자켓특집</a></dd>-->
                    </dl>
                {{/if}}

                {{>desktop/partials/lnb-banner}}
            </nav>
            <!-- //navigation -->

             <article class="brand-cont contents searchedProductListWrapper"
                        data-category-code="{{selectedSubCategory.id}}"
                        data-page-size=24>
                
                <h3>{{subCategory.name}}</h3>
                <!-- category-menu -->
                <div class="category-menu">
                    {{#if subCategory.subcategories}}
                        <div class="cate-nav">
                            {{#subCategory.subcategories}}
                                <a href="{{url}}" {{#if ../selectedSubCategory}}{{#is ../selectedSubCategory.id id}}class="active"{{/is}}{{/if}}>{{name}}</a>
                            {{/subCategory.subcategories}}
                        </div>
                    {{/if}}
                    <div class="select-wrap">
                        <!--<a href="#" data-target=".layer-prod-search" data-trigger="layer">상세검색설정</a>-->
                        <a href="#" onclick="javascript: alert('준비중 입니다.');return false;">상세검색설정</a>
                        <a href="#" data-target=".list-option" data-trigger="toggle" id="sortOptionToggle">신상품순</a>
                        {{#if sorts}}
                            <div class="list-option" id="sortOptionWrapper">
                                <ul>
                                    {{#sorts}}
                                        <li><a href="#" class="sortOption {{#if ../parameters.sort}}{{#is ../parameters.sort code}}active{{/is}}{{/if}}" data-sort-code="{{code}}">{{name}}</a></li>
                                    {{/sorts}}
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                </div>
                <!-- // category-menu -->

                 <!-- prod-search-list -->
                 <!-- TODO : 필터작업 되살릴때 같이 살릴 영역 -->
                 {{!--#if parameters}}--}}
                 <!--<div class="prod-search-list" id="selectedFilterWrapper" style="display: none;">-->
                 <!--<dl>-->
                 {{!-->desktop/partials/category/category-list-selected-filter-bar parameters}}--}}
