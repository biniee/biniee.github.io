{{!-- 더보기 버튼과 함께 있는 그리드--}}
{{#if product}}
    {{#if product.results}}
        <div class="prod-list productResultArea">
            {{#product.results}}
                {{>desktop/precompiles/product/grid}}
            {{/product.results}}
        </div>
    {{else}}
        <p class="no-result">상품이 존재하지 않습니다.</p>
    {{/if}}
    {{#if product.page}}
        {{#gt product.page.totalCount product.page.perPage}}
            <button type="button" class="list-more productMoreBtn"
                data-component-type="grid"
                data-category="{{parameters.category}}"
                data-sizes="{{list_to_string_with_comma parameters.sizes}}"
                data-colors="{{list_to_string_with_comma parameters.colors}}"
                data-suppliers="{{list_to_string_with_comma parameters.suppliers}}"
                data-price-ranges="{{list_to_string_with_comma parameters.priceRanges}}"
                data-sort="{{parameters.sort}}"
                data-is-best="{{parameters.isBest}}"
                data-is-new="{{parameters.isNew}}"
                data-on-sale="{{parameters.onSale}}"
                data-per-page="{{product.page.perPage}}"
                data-page-number="{{product.page.currentPage}}"
                data-total-count="{{product.page.totalCount}}">더보기</button>
        {{else}}
            <a href="#" class="productMoreBtn" style="display: none;"></a>
        {{/gt}}
    {{else}}
        <a href="#" class="productMoreBtn" style="display: none;"></a>
    {{/if}}
{{else}}
    <p class="no-result">상품이 존재하지 않습니다.</p>
{{/if}}